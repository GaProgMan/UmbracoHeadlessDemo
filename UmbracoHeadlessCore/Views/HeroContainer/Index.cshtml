@using UmbracoHeadlessCore.Extensions
@model UmbracoHeadlessCore.Models.HeroContainer

@{
    ViewData["Title"] = "View";
    var groups = Model.Children.InGroupsOf(3);
}

<div class="container">
    <!--Section: Cards-->
    <section class="text-center">
        @foreach (var group in groups)
        {
            <!--Grid row-->
            <div class="row mb-4 wow fadeIn">
                @foreach (var item in group)
                {
                    <!--Grid column-->
                    <div class="col-lg-4 col-md-12 mb-4">
                        <!--Card-->
                        <div class="card">
                            <!--Card image-->
                            <div class="view overlay">
                                @if (item.Image != null)
                                {
                                    
                                    var imageUrl = item.ImageBaseUrl + item.Image.Url + "?center=0.51,0.21&mode=resize&width=350&height=200";
                                    <img src="@imageUrl" class="card-img-top" alt="">
                                    <a href="@item.Url">
                                        <div class="mask rgba-white-slight waves-effect waves-light"></div>
                                    </a>
                                }
                            </div>
                            <!--Card content-->
                            <div class="card-body">
                                <!--Title-->
                                <h4 class="card-title">@item.Name</h4>
                                <!--Text-->
                                @*<p class="card-text">
                                    Get started with MDBootstrap, the world's most popular Material Design framework for building
                                    responsive, mobile-first sites.
                                </p>*@
                                <a href="@item.Url" class="btn btn-primary btn-md">
                                    Details
                                    <i class="fa fa-play ml-2"></i>
                                </a>
                            </div>
                        </div>
                        <!--/.Card-->
                    </div>
                    <!--Grid column-->
                }
            </div>
            <!--Grid row-->
        }
    </section>
    <!--Section: Cards-->
</div>